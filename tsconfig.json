{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/server.ts",
    "src/infra/**/*.ts",
    "src/modules/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "test/**",
    "dist/**"
  ]
}
